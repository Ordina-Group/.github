{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": [
    "Configure digest pinning for Docker and GitHub Actions",
    "Recreate closed pull requests for pin and pinDigest"
  ],
  "extends": [
    ":semanticCommits",
    ":timezone(Europe/Brussels)",
    "schedule:nonOfficeHours",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "pin": {
    "recreateClosed": true
  },
  "pinDigest": {
    "recreateClosed": true
  },
  "packageRules": [
    {
      "description": "Treat these plugins as fix",
      "matchDepNames": [
        "org.springframework.boot"
      ],
      "matchDepPatterns": [
        "org.jetbrains.kotlin.*"
      ],
      "semanticCommitType": "fix"
    },
    {
      "description": "Treat these plugins majors as feat",
      "matchUpdateTypes": [
        "major"
      ],
      "matchDepNames": [
        "org.springframework.boot"
      ],
      "matchDepPatterns": [
        "org.jetbrains.kotlin.*"
      ],
      "semanticCommitType": "feat"
    },
    {
      "description": "Pin GitHub Actions",
      "depTypeList": [
        "action"
      ],
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    }
  ]
}
